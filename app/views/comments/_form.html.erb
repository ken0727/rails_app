  <!-- コメントフォーム -->
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
    <%= form_for [@board, Comment.new] , id: 'new_comment' , remote: true do |f| %>
    <%= f.label :body, 'コメント' %>
    <%= f.text_area :body, class: 'form-control mb-3', rows: 2, placeholder: 'コメント' %>
    <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>