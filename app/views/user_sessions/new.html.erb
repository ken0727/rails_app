<% content_for :title, "ログイン | RUNTEQ BOARD APP" %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">

      <h1><%= t('views.user_sessions.new.title') %></h1>
      
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, t('views.user_sessions.new.email_label') %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, t('views.user_sessions.new.password_label') %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit t('views.user_sessions.new.login_button'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to t('views.user_sessions.new.signup_link'), new_user_path %>
        <a href="#"><%= t('views.user_sessions.new.forgot_password_link') %></a>
      </div>
    </div>
  </div>
</div>
