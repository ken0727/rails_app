<div id="board-id-<%= board.id %>">
  <div class="card">
    <img class="card-img-top" src="/assets/board_placeholder.png" width="300" height="200" />
    <div class="card-body">
      <h4 class="card-title">
        <a href="#"><%= board.title %></a>
      </h4>
      <div class='mr10 float-right'>
        <%= link_to '#', id: "button-edit-#{board.id}" do %>
          <%= icon 'fa', 'pen' %>
        <% end %>
        <%= link_to '#', id: "button-delete-#{board.id}", method: :delete, data: { confirm: '' } do %>
          <%= icon 'fas', 'trash' %>
        <% end %>
      </div>
      
      <!-- 投稿者の情報を別の行に表示 -->
      <div>
        <i class="far fa-user"></i>
        <%= board.user.full_name %>
      </div>
      
      <!-- 投稿日時を別の行に表示 -->
      <div>
        <i class="far fa-calendar"></i>
        <%= l board.created_at, format: :default %>
      </div>
      
      <p class="card-text"><%= board.body %></p>

    </div>
  </div>
</div>
